extends layout

block content
  h1= title
  - rows = Number(query.rows)
  - cols = Number(query.cols)
  p rows values #{query.rows} and columns values #{query.cols}
  - if(!Number.isInteger(rows) || !Number.isInteger(cols)){
      p not an integer
  - }
  - else if(rows<1 || rows>10){
      p Rows should be in between 1 and 10
  - }
  - else if(cols<1 || cols>10){
      p Columns should be in between 1 and 10
  - }
  - else{
    table(class="table") 
      - for(let i=0;i<rows;i++){
        tr#middle
          - for(let j=0;j<cols;j++){
              td= 1+i+j*rows
          - }
      - }
  - }