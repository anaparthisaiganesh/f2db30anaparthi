extends layout

block content
  h1= title
  - let res1=results
  div(class="container-fluid")
  div(class="row")
   each value ,index in res1
    div(class="col-sm-2" onclick=`buy(${index})`)  Color #{value.jeep_color} , Cost #{value.jeep_cost}, Speed #{value.jeep_speed}km/hr
   script.
    
    function buy(index)
    {
      alert(`Your purchased Item ${index+1}`)
    }
 
